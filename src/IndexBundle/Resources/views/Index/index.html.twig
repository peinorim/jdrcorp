{% extends "::layout_index.html.twig" %}
{% block title %}
    JdrCorp - Accueil
{% endblock %}
{% block fos_user_content %}
    <div class="container">
        <div class="page-header">
            <h1>Créations de fiches de personnages, aides de jeux pour les jeux de rôles Elric et Guildes Eldorado.</h1>
            <h2>Bienvenue sur jdrcorp !</h2>
        </div>

        <div class="col-md-6 col-sm-6">
            <div class="thumbnail">
                <a href="{{ path('Elric') }}">
                    <img class="img-responsive" src="{{ asset('res/img/Elric_index.jpg') }}" alt="elric">
                    <div class="caption">
                        <a href="{{ path('Elric') }}" class="btn btn-primary btn-block">
                            Créer une fiche de personnage pour Elric
                        </a>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6 col-sm-6">
            <div class="thumbnail">
                <a href="{{ path('Guildes') }}">
                    <img class="img-responsive" src="{{ asset('res/img/Guildes_index.jpg') }}" alt="guildes">
                    <div class="caption">
                        <a href="{{ path('Guildes') }}" class="btn btn-success btn-block">
                            Entrer dans l'univers de Guildes
                        </a>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
