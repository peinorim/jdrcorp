{% extends "::layout_guildes.html.twig" %}
{% block title %}
    JdrCorp - Guildes - Création de personnage
{% endblock %}

{% block fos_user_content %}
    <div class="container-fluid">
        <div class="page-header">
            <h1>Guildes Eldorado - Création de fiche de personnage</h1>
        </div>
    </div>
    <div>
        <form method="post" action="{{path('Guildes_generate') }}" id="create" name="create" enctype='multipart/form-data'>
            <div id="wizard" class="swMain" style="height:500px;width:100%;">
                <ul>
                    <li><a href="#infos">
                            <span class="stepNumber">1</span>
                            <span class="stepDesc">
                                Infos<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#caracs">
                            <span class="stepNumber">2</span>
                            <span class="stepDesc">
                                Caracs<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#comp">
                            <span class="stepNumber">3</span>
                            <span class="stepDesc">
                                Compétences<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#equip">
                            <span class="stepNumber">4</span>
                            <span class="stepDesc">
                                Equipement<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#loom">
                            <span class="stepNumber">5</span>
                            <span class="stepDesc">
                                Loom<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#settings">
                            <span class="stepNumber">6</span>
                            <span class="stepDesc">
                                Paramètres<br />
                                <small></small>
                            </span>
                        </a></li>
                </ul>

                <div style="width:100%;" id="infos">{% include 'GuildesBundle:Guildes/Create:infos.html.twig' %}</div>
                <div style="width:100%;" id="caracs">{% include 'GuildesBundle:Guildes/Create:caracs.html.twig' %}</div>
                <div style="width:100%;" id="comp">{% include 'GuildesBundle:Guildes/Create:comp.html.twig' %}</div>
                <div style="width:100%;" id="equip">{% include 'GuildesBundle:Guildes/Create:equip.html.twig' %}</div>
                <div style="width:100%;" id="loom">{% include 'GuildesBundle:Guildes/Create:loom.html.twig' %}</div>
                <div style="width:100%;" id="settings">{% include 'GuildesBundle:Guildes/Create:settings.html.twig' %}</div>
            </div>
        </form>
    </div>
{% endblock fos_user_content %}
{% block adds %}
    <link rel="stylesheet" type="text/css" href="{{ asset('res/css/elric/smart_wizard.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('res/css/index.css') }}"/>
    <!-- SCRIPTS -->
    <script src="{{ asset('res/js/jquery.smartWizard-2.0.min.js') }}"></script>
    <script src="{{ asset('res/js/guildes/create.js') }}"></script>
{% endblock %}