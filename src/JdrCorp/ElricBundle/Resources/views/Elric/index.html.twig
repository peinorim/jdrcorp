<!DOCTYPE html>
<html>
    <head>
        <title>Accueil - Elric</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% javascripts'@JdrCorpElricBundle/Resources/public/js/jquery-1.10.2.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts'@JdrCorpElricBundle/Resources/public/js/jquery.smartWizard-2.0.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts'@JdrCorpElricBundle/Resources/public/js/bootstrap.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts'@JdrCorpElricBundle/Resources/public/js/index.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% stylesheets '@JdrCorpElricBundle/Resources/public/css/bootstrap.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets '@JdrCorpElricBundle/Resources/public/css/index.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets '@JdrCorpElricBundle/Resources/public/css/smart_wizard.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <h1>Génération de fiche de personnage pour Elric</h1>
        <div class="centerThis">
            <form method="post" action="{{path('Elric_Create') }}" id="create" name="create">
                <div id="wizard" class="swMain" style="height:500px;">
                    <ul>
                        <li><a href="#caracs">
                                <span class="stepNumber">1</span>
                                <span class="stepDesc">
                                    Caractéristiques<br />
                                    <small></small>
                                </span>
                            </a></li>
                        <li><a href="#metier">
                                <span class="stepNumber">2</span>
                                <span class="stepDesc">
                                    Métier<br />
                                    <small></small>
                                </span>
                            </a></li>
                        <li><a href="#equip">
                                <span class="stepNumber">3</span>
                                <span class="stepDesc">
                                    Equipement<br />
                                    <small></small>
                                </span>                   
                            </a></li>
                    </ul>

                    <div id="caracs">{% include 'JdrCorpElricBundle:Elric:caracs.html.twig' %}</div>
                    <div id="metier">{% include 'JdrCorpElricBundle:Elric:metier.html.twig' %}</div>                      
                    <div id="equip">{% include 'JdrCorpElricBundle:Elric:equip.html.twig' %}</div>
                </div>
            </form>
        </div>	
    </body>
</html>
