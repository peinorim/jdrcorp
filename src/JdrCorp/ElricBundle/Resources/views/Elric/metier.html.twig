<h2 class="StepTitle">Métiers & Compétences</h2>
<div class="col-md-4" style="margin-top:10px;">
    <select id="metiers" class="form-control">
        <option value="0">Choisissez un métier</option>
{% for met in listeMet %}
        <option value="{{ met.getId }}">{{ met.getMetierNom }}</option>
  {% endfor %}
    </select>
</div>
<div class="col-md-6" style="height:500px;overflow:auto;">
    <table class="table table-hover">
        <thead>
        <th>Compétences</th>
        <th>%age de base</th>
        </thead>
        <tbody>
  {% for comp in listeComp %}
            <tr>
                <td class="col-md-4">{{ comp.getNom }}</td><td class="col-md-2">{{ comp.getBase }}%</td>
            </tr>
  {% endfor %}
        </tbody>
    </table>
</div>