<h2 class="StepTitle">Les tours</h2>  
<div class="row">
    <div class="col-md-12">
        <div id="listeTour" class="col-md-12" style="height:500px;overflow:auto;">
            <table class="table table-hover" style="height:300px;overflow:auto;">
                <thead>
                <th>Nom</th>
                <th>Effet</th>
                <th>Maison</th>
                </thead>
                <tbody>
                    {% for tour in listetour %}
                        <tr>
                            <td>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="tour" value="{{tour.getId}}">
                                        {{tour.getNom}}
                                    </label>
                                </div>
                            </td>
                            <td>{{tour.getEffet}}</td>
                            <td>{{tour.getMaison.getNom}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

