<h2 class="StepTitle">Informations de base</h2>  

<div class="form-horizontal" style="margin-top:10px;">
    <div class="form-group">
        <label for="nom" class="col-md-3 control-label">Nom</label>
        <div class="col-md-8">
            <input type="text" class="form-control" id="nom" name="nom" value="Bob"/>
        </div>
    </div>
    <div class="form-group">
        <label for="surnom" class="col-md-3 control-label">Surnom</label>
        <div class="col-md-8">
            <input type="text" class="form-control" id="surnom" name="nom"/>
        </div>
    </div>
    <div class="form-group">
        <label for="maison" class="col-md-3 control-label">Maison</label>
        <div class="col-md-8">
            <select class="form-control" id="maison" name="naiss">
                {% for maison in listemaison %}
                    {% if maison.getNom != "Génériques" %}
                        <option>{{maison.getNom}}</option>
                    {%endif%}
                {%endfor%}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="age" class="col-md-3 control-label">Age</label>
        <div class="col-md-2">
            <input type="number" class="form-control" id="age" name="age" maxlength="3" value="30"/>
        </div>
    </div>
    <div class="form-group">
        <label for="sexe" class="col-md-3 control-label">Sexe</label>
        <div class="col-md-2">
            <select class="form-control" id="sexe" name="sexe">
                <option value="M">M</option> 
                <option value="F">F</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="desc" class="col-md-3 control-label">Description</label>
        <div class="col-md-8">
            <textarea class="form-control" id="desc" name="desc" maxlength="100"></textarea>
        </div>
    </div>
</div>

