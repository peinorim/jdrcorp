{% extends "::layout_guildes.html.twig" %}
{% block title %}
    JdrCorp - Guildes - Création de personnage
{% endblock %}

{% block fos_user_content %}
    <div class="" style="margin-top:50px;">
        <form method="post" action="{{path('Guildes_generate') }}" id="create" name="create" enctype='multipart/form-data'>
            <div id="wizard" class="swMain" style="height:500px;width:100%;">
                <ul>
                    <li><a href="#infos">
                            <span class="stepNumber">1</span>
                            <span class="stepDesc">
                                Infos<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#caracs">
                            <span class="stepNumber">2</span>
                            <span class="stepDesc">
                                Caracs<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#comp">
                            <span class="stepNumber">3</span>
                            <span class="stepDesc">
                                Compétences<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#equip">
                            <span class="stepNumber">4</span>
                            <span class="stepDesc">
                                Equipement<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#loom">
                            <span class="stepNumber">5</span>
                            <span class="stepDesc">
                                Loom<br />
                                <small></small>
                            </span>
                        </a></li>
                    <li><a href="#settings">
                            <span class="stepNumber">6</span>
                            <span class="stepDesc">
                                Paramètres<br />
                                <small></small>
                            </span>
                        </a></li>
                </ul>

                <div style="width:100%;" id="infos">{% include 'JdrCorpGuildesBundle:Guildes/Create:infos.html.twig' %}</div>
                <div style="width:100%;" id="caracs">{% include 'JdrCorpGuildesBundle:Guildes/Create:caracs.html.twig' %}</div>
                <div style="width:100%;" id="comp">{% include 'JdrCorpGuildesBundle:Guildes/Create:comp.html.twig' %}</div>   
                <div style="width:100%;" id="equip">{% include 'JdrCorpGuildesBundle:Guildes/Create:equip.html.twig' %}</div>  
                <div style="width:100%;" id="loom">{% include 'JdrCorpGuildesBundle:Guildes/Create:loom.html.twig' %}</div>
                <div style="width:100%;" id="settings">{% include 'JdrCorpGuildesBundle:Guildes/Create:settings.html.twig' %}</div>  
            </div>
        </form>
    </div>

    {% javascripts '@JdrCorpGuildesBundle/Resources/public/js/jquery.smartWizard.js' filter='?yui_js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@JdrCorpGuildesBundle/Resources/public/js/create.js' filter='?yui_js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% stylesheets 'bundles/jdrcorpelric/css/smart_wizard.css'  filter='?yui_css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock fos_user_content %}
