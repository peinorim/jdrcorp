{% extends "::layout_guildes.html.twig" %}
{% block title %}
JdrCorp - Guildes - Création de personnage
{% endblock %}

{% block fos_user_content %}
<div class="" style="margin-top:50px;">
    <form method="post" action="{{path('Guildes_create') }}" id="create" name="create" enctype='multipart/form-data'>
        <div id="wizard" class="swMain" style="height:500px;width:100%;">
            <ul>
                <li><a href="#caracs">
                        <span class="stepNumber">1</span>
                        <span class="stepDesc">
                            Base<br />
                            <small></small>
                        </span>
                    </a></li>
                <li><a href="#metier">
                        <span class="stepNumber">2</span>
                        <span class="stepDesc">
                            Métier<br />
                            <small></small>
                        </span>
                    </a></li>
                <li><a href="#settings">
                        <span class="stepNumber">3</span>
                        <span class="stepDesc">
                            Paramètres<br />
                            <small></small>
                        </span>
                    </a></li>
            </ul>

            <div style="width:100%;"  id="caracs">{#{% include 'JdrCorpGuildesBundle:Guildes/Create:caracs.html.twig' %}#}</div>
            <div style="width:100%;" id="metier">{#{% include 'JdrCorpGuildesBundle:Guildes/Create:metier.html.twig' %}#}</div>
            <div style="width:100%;" id="settings">{#{% include 'JdrCorpGuildesBundle:Guildes/Create:settings.html.twig' %}#}</div>   
        </div>
    </form>
</div>	
            
{% javascripts '@JdrCorpElricBundle/Resources/public/js/jquery.smartWizard-2.0.min.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% javascripts '@JdrCorpGuildesBundle/Resources/public/js/create.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% stylesheets 'bundles/jdrcorpelric/css/smart_wizard.css'  filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock fos_user_content %}
