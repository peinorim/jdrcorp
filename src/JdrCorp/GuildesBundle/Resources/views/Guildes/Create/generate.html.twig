        <meta charset="UTF-8" >
        <title>Guildes Eldorado - Fiche de personnage</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% javascripts '@JdrCorpElricBundle/Resources/public/js/jquery-1.10.2.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
