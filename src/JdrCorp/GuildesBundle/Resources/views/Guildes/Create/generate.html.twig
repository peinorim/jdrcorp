            {% endfor %}
        </span>
        <span id="charm">
            {% for i in 1..perso.charm %}
                <p class="puce"></p>
            {% endfor %}
        </span>
        <span id="ruse">
            {% for i in 1..perso.ruse %}
                <p class="puce"></p>
            {% endfor %}
        </span>
        <span id="savant">
            {% for i in 1..perso.savant %}
