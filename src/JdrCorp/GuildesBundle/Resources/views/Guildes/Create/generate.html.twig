    <body>
        <div id="fiche_recto"></div>
        <div id="fiche_verso"></div>
        <span id="nom">{{perso.nom}}</span>
        <span id="surnom">{{perso.surnom}}</span>
        <span id="maison">{{perso.maison}}</span>
        <span id="age">{{perso.age}}</span>
        <span id="sexe">{{perso.sexe}}</span>
        <span id="desc">{{perso.desc}}</span>
        <span id="metier">{{perso.metier}}</span>
        <span id="destin">{{perso.destin}}</span>
        <span id="agile">
            {% for i in 1..perso.agile %}
                <p class="puce"></p>
            {% endfor %}
        </span>
        <span id="fort">
            {% for i in 1..perso.fort %}
                <p class="puce"></p>
            {% endfor %}
        </span>
        <span id="res">
            {% for i in 1..perso.res %}
                <p class="puce"></p>
            {% endfor %}
        </span>
        <span id="obs">
            {% for i in 1..perso.obs %}
                <p class="puce"></p>
            {% endfor %}
        </span>
        <span id="charm">
            {% for i in 1..perso.charm %}
                <p class="puce1"></p>
            {% endfor %}
        </span>
        <span id="ruse">
            {% for i in 1..perso.ruse %}
                <p class="puce1"></p>
            {% endfor %}
        </span>
        <span id="savant">
            {% for i in 1..perso.savant %}
                <p class="puce1"></p>
            {% endfor %}
        </span>
        <span id="tal">
            {% for i in 1..perso.tal %}
                <p class="puce1"></p>
            {% endfor %}
        </span>

        <span id="guerrier">
            {% for i in 1..perso.guerrier %}
                <p class="puce1"></p>
            {% endfor %}
        </span>
        <span id="etrange">
            {% for i in 1..perso.etrange %}
                <p class="puce1"></p>
            {% endfor %}
        </span>
        <span id="guildien">
            {% for i in 1..perso.guildien %}
                <p class="puce1"></p>
            {% endfor %}
        </span>
        <table id="pv" style="width:102px;">
            <tbody>
                {% for i in 1..perso.res %}
                    <tr>
                        <td style="padding-top: 14px;padding-bottom: 14px;"><span class="puce"></span></td>
                        <td><span class="puce"></span></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <table id="comp" style="width:245px;">
            <tbody>
                {% for comp, niv in perso.competences %}
                    <tr>
                        <td>{{comp}}</td>
                        <td>{{niv}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <table id="compCpg" style="width:280px;">
            <tbody>
                {% for comp, niv in perso.competencesCpg %}
                    <tr>
                        <td>{{comp}}</td>
                        <td>{{niv}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% for couleur, pts in perso.loom %}
            <span class="couleur" id="{{couleur}}">{{pts}}</span>
        {% endfor %}
        <table id="armes">
            <tbody>
                {% for arme in perso.armes %}
                    <tr>
                        <td style="width:200px;">{{arme.Nom}}</td>
                        <td style="padding:0px 35px 0px 0px;">{{arme.Init}}</td>
                        <td style="padding:0px 35px 0px 0px;">{{arme.Att}}</td>
                        <td style="padding:0px 35px 0px 0px;">{{arme.Def}}</td>
                        <td style="padding:0px 35px 0px 0px;">{{arme.Blessure}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <table id="armures">
            <tbody>
                {% for armure in perso.armures %}
                    <tr>
                        <td style="width:200px;">{{armure.Nom}}</td>
                        <td style="padding:0px 35px 0px 0px;">{{armure.Init}}</td>
                        <td style="padding:0px 35px 0px 0px;">{{armure.Att}}</td>
                        <td style="padding:0px 35px 0px 0px;">{{armure.Def}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <span id="encperm">{{perso.fort * 2}}</span>
        <ul id="equip">
            {% for item in perso.equip %}
                <li>{{item.Nom}}</li>
                {% endfor %}
        </span>
</body>
