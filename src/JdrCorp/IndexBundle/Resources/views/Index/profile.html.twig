{% extends "::layout.html.twig" %}
{% block title %}
JdrCorp - Elric - Mes fiches générées
{% endblock %}
{% block fos_user_content %}
{% if is_granted('ROLE_USER') and myfiches|length >0 %}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Vous avez créé {{myfiches|length}} fiches pour Elric</h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
        {% for fiche in myfiches %}
            <li class="list-group-item">
                Nom du personnage : {{fiche.getPerso.getNom}} -  Créé le : {{fiche.date | date('d/m/Y à h:i:s')}}
                 <button type="button" class="btn btn-primary btn-sm" style="margin-left:50px;">PDF</button>
                  <button type="button" class="btn btn-info btn-sm">JPEG</button>
            </li>
        {% endfor %}
        </ul>
    </div>
</div>
{% endif %}
{% endblock fos_user_content %}
