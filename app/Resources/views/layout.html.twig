<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Watch My Desk{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% javascripts 'bundles/jdrcorpelric/js/jquery-1.10.2.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts 'bundles/jdrcorpelric/js/jquery.smartWizard-2.0.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts 'bundles/jdrcorpelric/js/bootstrap.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts 'bundles/jdrcorpelric/js/index.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% stylesheets 'bundles/jdrcorpelric/css/bootstrap.css'  filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets 'bundles/jdrcorpelric/css/index.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets 'bundles/jdrcorpelric/css/smart_wizard.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
{% block body %}

    <nav class="navbar navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Génération de fiche de personnage pour Elric</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                {% if is_granted("ROLE_USER") == false %}
                <li><a href="{{path('register') }}">Inscrivez-vous pour sauvegarder vos personnages</a></li>
                {% endif %}
                <li><span class="label label-warning pull-right" style="font-size:100%;">{{nbFiches}} fiches créées à ce jour</span></li>
            </ul>
            {% if is_granted("ROLE_USER") == false %}
            <form class="navbar-form navbar-right" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="_useremail" placeholder="email">    
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="_password" placeholder="mot de passe">    
                </div>
                <input type="hidden" name="_target_path" value="account" />
                <input type="submit" class="btn btn-default" value="Connexion"/>
            </form>
            {% else %}
                <form class="navbar-form navbar-right" action="{{ path('logout') }}" method="post">
                    <input type="submit" class="btn btn-default" value="Déconnexion"/>
                </form>
            </form>
            {% endif %}
        </div>
    </nav>
  {% if notice %}
    <div class="alert alert-{{type}} alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>{{ notice.message }}</div>
  {% endif %}
  {% block fos_user_content %}
  {% endblock fos_user_content %}

{% endblock %}
