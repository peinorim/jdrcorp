{% extends "::layout_index.html.twig" %}
{% block title %}
    JdrCorp - Réinitialisation du mot de passe
{% endblock %}
{% block metas %}
{% endblock %}
{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <div class="container">
        <div class="page-header">
            <h1>Réinitialisation du mot de passe</h1>
        </div>
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
            <div class="form-group">
                {% if invalid_username is defined %}
                    <p>Ce nom d'utilisateur n'existe pas.</p>
                {% endif %}
                <label class="col-sm-2 control-label" for="username">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" type="email" id="username" name="username" required="required"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input class="btn btn-primary" type="submit" value="{{ "Envoyer"|trans }}">
                </div>
            </div>
        </form>
    </div>
{% endblock fos_user_content %}